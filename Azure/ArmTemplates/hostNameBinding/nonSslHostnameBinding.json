{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "variables": {
    "webApiVersion": "2018-02-01",
    "webAppNameTidy": "[tolower(trim(parameters('webAppName')))]",
    "hostnameBingindTidy": "[tolower(trim(parameters('hostnameBinding')))]"
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "webAppName": {
      "type": "string"
    },
    "hostnameBinding": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "[variables('webApiVersion')]",
      "type": "Microsoft.Web/sites/hostNameBindings",
      "name": "[concat(variables('webAppNameTidy'),'/', split(variables('hostnameBingindTidy'), ',')[copyIndex()])]",
      "dependsOn": [
        "[concat('Microsoft.Web/sites/', variables('webAppNameTidy'))]"
      ],
      "properties": {
        "domainId": null,
        "hostNameType": "Verified",
        "siteName": "variables('webAppNameTidy')"
      },
      "copy": {
        "name": "hostnameloop",
        "mode": "serial",
        "batchSize": 1,
        "count": "[length(split(variables('hostnameBingindTidy'),','))]"
      }
    }
  ]
}
