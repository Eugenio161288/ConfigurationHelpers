{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "networkSecurityGroupName": {
            "type": "string",
            "defaultValue": "myNSG"
        },
		"allowedCIDRs": {
			"type": "array",
					"defaultValue":[ 
					"1.1.1.1/32", 
					]
			},
		"allowedCIDRsNames": {
			"type": "array",
					"defaultValue":[ 
					"empty_name",
					]
			},
        "startingPriorityIndexMinusOne": {
            "type": "string",
            "defaultValue": "100"
        },	
        "startingPriorityIndex": {
            "type": "string",
            "defaultValue": "101"
        },
		"portToAllow" : {
            "type": "string",
            "defaultValue": "80"
        },
		"protocolToAllow" : {
            "type": "string",
            "defaultValue": "tcp"
        },		
    },
    "variables": {
		"apiVersionString": "2015-05-01-preview",	
    },	
  "resources": [
	{
		"apiVersion": "[variables('apiVersionString')]",
		"type": "Microsoft.Network/networkSecurityGroups/securityRules",
		"name": "[concat(parameters('networkSecurityGroupName'), '/', parameters('startingPriorityIndexMinusOne'))]",
		"location": "[resourceGroup().location]",
			"properties": {
				
				"description": "[concat('Allow from ', parameters('allowedCIDRsNames')[0])]",
				"protocol": "parameters('protocolToAllow')",
				"sourcePortRange": "*",
				"destinationPortRange": "parameters('portToAllow')",
				"sourceAddressPrefix": "[parameters('allowedCIDRs')[0]]",
				"destinationAddressPrefix": "*",
				"access": "Allow",
				"priority": "[copyIndex(int(parameters('startingPriorityIndexMinusOne')))",
				"direction": "Inbound"
			}		
	},
	{
		"copy": { 
				"name": "allowCopy", 
				"count": "[length(parameters('allowedCIDRs'))]" 
				},	
		"apiVersion": "[variables('apiVersionString')]",
		"type": "Microsoft.Network/networkSecurityGroups/securityRules",
		"name": "[concat(parameters('networkSecurityGroupName'), '/', copyIndex(int(parameters('startingPriorityIndex'))))]",
		"location": "[resourceGroup().location]",
		  "dependsOn": [
			"[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'), '/securityRules/', copyIndex(parameters('startingPriorityIndexMinusOne')))]",
		  ],
			"properties": {
				
				"description": "[concat('Allow from ', parameters('allowedCIDRsNames')[copyIndex(1)])]",
				"protocol": "parameters('protocolToAllow')",
				"sourcePortRange": "*",
				"destinationPortRange": "parameters('portToAllow')",
				"sourceAddressPrefix": "[parameters('allowedCIDRs')[copyIndex(1)]]",
				"destinationAddressPrefix": "*",
				"access": "Allow",
				"priority": "[copyIndex(int(parameters('startingPriorityIndex')))",
				"direction": "Inbound"
			}
	}
	]
	}